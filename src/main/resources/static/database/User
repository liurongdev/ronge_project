drop table if EXISTS  comment_info;
create table comment_info(
  id int(10) not NULL AUTO_INCREMENT comment '自增id',
  articleId BIGINT(11) not null COMMENT  '文章id',
  authorId  varchar(100) not null comment '评论作者id',
  content text not null  comment '评论内容',
  createTime TIMESTAMP not null comment '评论时间',
  like_counts int(10) not null DEFAULT  0 comment '点赞次数',
  dislike_counts int(10) not null DEFAULT 0 comment '被踩的次数',
  PRIMARY KEY (id,articleId,authorId)
) ENGINE=InnoDB  AUTO_INCREMENT=1 DEFAULT charset=UTF8;


