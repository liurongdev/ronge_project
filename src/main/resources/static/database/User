drop table if EXISTS  reply_info;
create table reply_info(
  id int(10) not NULL AUTO_INCREMENT,
  commentId int(10) not null,
  articleId BIGINT(11) not null,
  origin_authorId  varchar(100) not null,
  reply_authorId  varchar(100) not null,
  content text not null,
  like_counts int(10) not null DEFAULT  0 comment '点赞次数',
  dislike_counts int(10) not null DEFAULT 0 comment '被踩的次数',
  createTime TIMESTAMP not null,
  PRIMARY KEY (id,commentId,articleId)
) ENGINE=InnoDB  AUTO_INCREMENT=1 DEFAULT charset=UTF8;


